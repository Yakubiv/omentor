<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= t('layouts.admins.feedbacks.page_title') %></h3>
  </div>

  <div class="card-body">
    <p id="notice"><%= notice %></p>
    <div class="table-responsive">
      <table class="table text-nowrap mb-0">
        <thead>
          <tr>
            <th><%= t('layouts.admins.feedbacks.description') %></th>
            <th>Email</th>
            <th><%= t('layouts.admins.feedbacks.type') %></th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @feedbacks.each do |feedback| %>
            <tr>
              <td><%= feedback.describe %></td>
              <td><%= feedback.user.email %></td>
              <td><%= feedback.user.sign_up_as %></td>
              <td><%= link_to t('layouts.admins.feedbacks.show'), [:admin, feedback] %></td>
              <td><%= link_to t('layouts.admins.feedbacks.delete'), [:admin, feedback], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card-footer text-right">
    <%= render partial: 'layouts/partials/pagy', locals: { pagy: @pagy } %>
  </div>
</div>