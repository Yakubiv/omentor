var modal = document.getElementById("main-modal");
modal.style.display = "block";

var modal_content = document.getElementById("modal-content");
var edit_modal_content = document.getElementById("edit-modal-content");
edit_modal_content.style.display = "block";
modal_content.innerHTML = edit_modal_content.outerHTML;

function hiddenNewModalContent() {
  modal_content.innerHTML = "";
  edit_modal_content.style.display = "none";
  modal.style.display = "none";
}
