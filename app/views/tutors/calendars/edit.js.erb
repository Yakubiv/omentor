document.getElementById("open-lesson-modal").click();

var start = document.getElementById("start_at");
var end = document.getElementById("end_at");
var desctription = document.getElementById("description");

function dateСonversion(date) {
  var newDate = new Date(date).toISOString().split(".")[0];
  return newDate;
}

flatpickr(start, { format: "Y-m-d H:i", enableTime: true }).setDate(
  dateСonversion("<%= params[:start_at] %>")
);
flatpickr(end, { format: "Y-m-d H:i", enableTime: true }).setDate(
  dateСonversion("<%= params[:end_at] %>")
);
desctription.value = "<%= params[:title] %>";

