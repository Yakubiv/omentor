<div class="form-group">
  <%= f.label :subject_id, class: 'block text-sm font-medium leading-5 text-gray-700' %>
  <%= f.select :subject_id, options_for_select(current_tutor_profile.subjects.map{|a| [a.name, a.id]}), {}, class: "form-control", required: true, placeholder: t('tutors.vacations.short_description') %>
</div>

<div class="form-group">
  <%= f.label :duration, class: 'block text-sm font-medium leading-5 text-gray-700' %>
  <%= f.select :duration, options_for_select(lesson_durations.map{ |a| [a[:name], a[:duration]]}), {}, class: "form-control", required: true, placeholder: t('tutors.vacations.short_description') %>
</div>

<div class="form-group">
  <%= f.label :price, class: 'block text-sm font-medium leading-5 text-gray-700' %>
  <%= f.text_field :price, readonly: true, class: "form-control", required: true, placeholder: t('tutors.vacations.short_description') %>
</div>

<div class="mt-5 align-center">
  <div id="booking-calendar">
    <%= week_calendar do |date| %>
      <%- @available_hours.fetch(date.to_s, []).each do |time| %>
        <div class="c-time-slot-record <%= time[:status] %>" data-time="<%= time[:full_time] %>">
          <%= time[:time]%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= params[:start_at]  %>

<div class="form-group">
  <%= f.submit t('tutors.vacations.create'), data: { disable_with: "Saving..." }, class: 'w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out' %>
</div>