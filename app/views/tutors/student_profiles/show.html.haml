  .col-12
    %ul#pills-tab.nav.nav-tabs.mb-3{:role => "tablist"}
      %li.nav-item
        %a#pills-lessons-tab.nav-link.active{ "data-toggle" => "pill", :href => "#pills-lessons", :role => "tab"}= t('tutors.students.lessons')
  .col-lg-8.col-md-12
    #pills-tabContent.tab-content
      #pills-lessons.tab-pane.fade.show.active
        = render 'tutors/lessons/lessons', lessons: @lessons
  .col-lg-4.col-md-12
    .card
      .card-body
        .widgets1
          .icon
            %i.icon-trophy.text-success.font-30
          .details
            %h6.mb-0.font600 Кількість уроків
            %span.mb-0 $96K +
