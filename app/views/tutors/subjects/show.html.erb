<div style='margin-bottom: 20px'>
  <%= link_to 'Додати Тему +', new_tutors_subject_homework_preset_path(@subject), style: "font-weight: bold" %>
</div>

<div>
  Завдання з <%= @subject.name %>:
  <table style="width: 100%" class="my_table">
    <tr>
      <th class="my_table">Тема</th>
      <th class="my_table">К-сть завдань</th>
      <th class="my_table">Відкрити</th>
      <th class="my_table">Редагувати</th>
      <th class="my_table">Видалити</th>
    </tr>
    <% @homeworks.each do |homework| %>
      <tr>
        <td class="my_table"><%= homework.subject_theme %></td>
        <td class="my_table"><%= homework.questions.size %></td>
        <td class="my_table"><%= link_to 'Відкрити', tutors_subject_homework_preset_path(@subject, homework), style: 'color: green' %></td>
        <td class="my_table"><%= link_to 'Редагувати', edit_tutors_subject_homework_preset_path(@subject, homework), style: 'color: gray' %></td>
        <td class="my_table">
          <%= link_to 'Видалити', tutors_subject_homework_preset_path(@subject, homework), 
                                  style: 'color: red', 
                                  data: {
                                    turbo_method: :delete,
                                    turbo_confirm: 'Are you sure?'
                                  } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
