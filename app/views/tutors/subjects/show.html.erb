<div style='margin-bottom: 20px'>
  <%= link_to t('tutors.homeworks.create'), new_tutors_subject_homework_preset_path(@subject) %>
</div>

<div>
  Домашки з предмету <%= @subject.name %>:
  <% @homeworks.each do |homework| %>
    <div>
      <%= homework.subject_theme %>
      <%= link_to 'Переглянути', tutors_subject_homework_preset_path(@subject, homework), style: 'color: green' %>
      <%= link_to 'Редагувати', edit_tutors_subject_homework_preset_path(@subject, homework), style: 'color: gray' %>
      <%= link_to 'Видалити', tutors_subject_homework_preset_path(@subject, homework), style: 'color: red', 
                              data: {
                                turbo_method: :delete,
                                turbo_confirm: 'Are you sure?'
                              } %>
    </div>
  <% end %>
</div>
