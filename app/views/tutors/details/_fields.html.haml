.row
  .col-sm-6.col-md-4
    .form-group
      = f.label :avatar, class: 'control-label'
      = f.file_field :avatar, multiple: false, direct_upload: true, class: 'form-control'
  .col-sm-6.col-md-4
    - if f.object.avatar.attached?
      .form-avatar.pt-10
        = image_tag user_avatar(f.object, 60), class: 'rounded'
.row
  .col-sm-4.col-md-4
    .form-group
      = f.label :first_name, class: 'control-label'
      = f.text_field :first_name, required: true, class: 'form-control'
  .col-sm-4.col-md-4
    .form-group
      = f.label :last_name, class: 'control-label'
      = f.text_field :last_name, required: true, class: 'form-control'
  .col-sm-4.col-md-4
    .form-group
      = f.label :username, class: 'control-label'
      = f.text_field :username, required: true, class: 'form-control'
  .col-sm-4.col-md-4
    .form-group
      = f.label :phone, class: 'control-label'
      = f.text_field :phone, required: true, class: 'form-control', id: 'phone', placeholder: '(999) 999-9999'
  .col-sm-6.col-md-4
    .form-group
      = f.label :birthday, class: 'control-label'
      .input-group
        = f.text_field :birthday, required: true, class: 'form-control', data: { provide: 'datepicker', date: { autoclose: 'true' } }
.row
  .col-sm-6.col-md-4
    .form-group
      = f.label :gender, class: 'control-label'

      .selectgroup.w-100
        - Profile.genders.each do |gender, key|
          %label.selectgroup-item
            = f.radio_button :gender, gender, { required: true, class: 'selectgroup-input' }
            %span.selectgroup-button= Profile.human_enum_name(:gender, gender)

