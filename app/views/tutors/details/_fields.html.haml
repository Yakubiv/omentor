
.row
  .col-sm-12
    .form-group
      = f.label :first_name, class: 'control-label'
      = f.text_field :first_name, required: true, class: 'form-control'
  .col-md-6
    .form-group
      = f.label :last_name, class: 'control-label'
      = f.text_field :last_name, required: true, class: 'form-control'
  .col-md-6
    .form-group
      = f.label :username, class: 'control-label'
      = f.text_field :username, required: true, class: 'form-control'
  .col-md-6
    .form-group
      = f.label :rate, class: 'control-label'
      .input-group
        .input-group-prepend
          .input-group-text
            %i.fe.fe-dollar-sign
        = f.number_field :rate, required: true, class: 'form-control'
  .col-md-6
    .form-group
      = f.label :total_years_of_expirience, class: 'control-label'
      .input-group
        .input-group-prepend
          .input-group-text
            %i.icon-graduation
        = f.number_field :total_years_of_expirience, required: true, class: 'form-control'
  .col-md-12
    .form-group
      = f.label :phone, class: 'control-label'
      = f.text_field :phone, required: true, class: 'form-control', id: 'phone', placeholder: '(999) 999-9999'
  .col-sm-12
    .form-group
      = f.label :birthday, class: 'control-label'
      .input-group
        = f.text_field :birthday, required: true, class: 'form-control', data: { provide: 'datepicker', date: { autoclose: 'true' } }
  .col-md-12
    .form-group
      = f.label :time_zone, class: 'control-label'
      = f.time_zone_select(:time_zone, nil, { }, class: 'form-control', required: true )

.row
  .col-sm-12
    .form-group
      = f.label :gender, class: 'control-label'

      .selectgroup.w-100
        - Profile.genders.each do |gender, key|
          %label.selectgroup-item
            = f.radio_button :gender, gender, { required: true, class: 'selectgroup-input' }
            %span.selectgroup-button= Profile.human_enum_name(:gender, gender)

  .col-sm-12
    .form-group
      = f.label :degree_type, class: 'control-label'

      .selectgroup.w-100
        - Profile.degree_types.each do |degree, key|
          %label.selectgroup-item
            = f.radio_button :degree_type, degree , { required: true, class: 'selectgroup-input' }
            %span.selectgroup-button= Profile.human_enum_name(:degree_type, degree)
.row
  .col-sm-6
    .form-group
      = f.label :city, class: 'control-label'
      = f.text_field :city, required: true, class: 'form-control'
  .col-md-6
    .form-group
      = f.label :country_id, class: 'control-label'
      = f.select :country_id, options_for_select(countries_to_select, f.object.country_id), { prompt: t('helpers.placeholder.student.country') }, class: 'form-control', required: true
