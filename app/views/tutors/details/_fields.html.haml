.row
  .col-sm-6.col-md-4
    .form-group
      = f.label :city, class: 'control-label'
      = f.text_field :city, required: true, class: 'form-control'
  .col-md-5
    .form-group
      = f.label :country, class: 'control-label'
      = f.select :country, options_for_select(['Ukraine'], f.object.country), { prompt: t('helpers.placeholder.student.country') }, class: 'form-control', required: true
  .col-md-12
    .form-group.mb-0
      = f.label :bio, class: 'control-label'
      = f.text_area :bio, rows: 5, class: 'form-control'