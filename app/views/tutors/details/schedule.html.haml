.row.clearfix.pt-50.pb-50
  .col-lg-6.offset-lg-3
    = render 'steps'
  .col-lg-8.offset-lg-2
    .card
      = form_with(model: @tutor_profile, url: tutors_details_path, method: :put) do |f|
        .card-body
          .card-title.mb-3
            = t('students.details.schedule_header')
          #calendar-registration-form
        .card-footer.text-right
          = link_to t('students.details.back').html_safe, photo_students_details_path, class: 'btn btn-info'
          = f.submit t('students.details.next').html_safe, class: 'btn btn-info'