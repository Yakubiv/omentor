.row.clearfix.pt-50.pb-50.mt-12
  .col-lg-12
    = render 'steps'
  .col-lg-8.offset-lg-2
    .card
      .card-body.p-10
        .card-title.mb-3
          = t('tutors.details.schedule_header')
        .rounded-md.bg-indigo-200.p-4.mb-3
          .flex
            .flex-shrink-0
              %svg.h-5.w-5.text-indigo-500{:fill => "currentColor", :viewbox => "0 0 20 20"}
                %path{"clip-rule" => "evenodd", :d => "M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z", "fill-rule" => "evenodd"}
            .ml-3.flex-1.md:flex.md:justify-between
              %p.text-sm.leading-5.text-indigo-500
                = t('tutors.registration.delete_slot_tip')

        #calendar-tutor-schedule-form
        = render 'tutors/registrations/time_slots/delete_block'
      .card-footer.text-right.px-10
        = link_to t('students.details.back').html_safe, video_tutors_details_path, class: 'mr-4 whitespace-no-wrap text-base leading-6 font-medium text-gray-500 hover:text-gray-900 focus:outline-none focus:text-gray-900'
        = link_to t('students.details.done').html_safe, tutors_dashboard_path, class: 'whitespace-no-wrap inline-flex items-center justify-center px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150'