= render 'tabs'

%div{ class: "max-w-7xl mx-auto px-4 sm:px-6 md:px-8" }
  .card
    .card-header.bline
      = t('tutors.settings.account_header')
      .card-options
        %a.card-options-fullscreen{"data-toggle" => "card-fullscreen", :href => "#"}
          %i.fe.fe-maximize
    = form_with(model: current_user, url: tutors_profile_path, method: :put) do |f|
      .card-body.p-10
        .row
          .col-sm-6
            = render 'tutors/settings/account_fields', f: f
      .card-footer.text-right.px-10
        = f.submit t('tutors.details.save').html_safe, class: 'btn btn-primary'