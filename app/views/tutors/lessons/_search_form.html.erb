<div class="card mt-1 rounded-none">
  <div class="card-body">
  <span>Пошук студентів</span>
    <%= form_with url: tutors_lessons_path, local: true, method: :get do |f| %>
      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <%= f.text_field :search, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.submit "Search", class: "form-control" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
