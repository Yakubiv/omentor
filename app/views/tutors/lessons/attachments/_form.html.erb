<%= form_with(model: lesson, url: tutors_lesson_attachments_path, method: :post) do |f| %>
  <div class='mb-6'>
    <%= f.label :attachment, class: 'label' %>
    <div class='dropzone dropzone-default dz-clickable' data-controller="dropzone" data-dropzone-max-files='3'>
      <%= f.file_field :attachments, multiple: true, direct_upload: true, data: { target: 'dropzone.input' } %>
      <div class="dropzone-msg dz-message needsclick text-gray-600">
        <h3 class="dropzone-msg-title">Drag here to upload or click here to browse</h3>
        <span class="dropzone-msg-desc text-sm">2 MB file size maximum. Allowed file types pdf, png, jpeg, jpg, doc, docx, xml, zip, rar.</span>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <%= f.submit 'Upload', class: 'form-control' %>
  </div>
<% end %>