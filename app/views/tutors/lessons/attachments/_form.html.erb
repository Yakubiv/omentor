<%= form_with(model: lesson, url: tutors_lesson_attachments_path, method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :attachment, "select files" %>
    <%= f.file_field :attachments, multiple: true, direct_upload: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Upload', class: 'form-control' %>
  </div>
<% end %>