<div class="bg-white shadow">
  <div class="px-4 sm:px-6 lg:mx-auto lg:px-8">
    <div class="py-6">
      <div class="lg:flex lg:items-center md:justify-between lg:justify-between">
        <div class="flex-1 min-w-0">
          <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:leading-9 sm:truncate">
            <%= lesson.subject %>

            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium leading-5 <%=  lesson_status_background[lesson.status] %>">
              <%= lesson.status.upcase %>
            </span>
          </h2>
        </div>

        <div class="mt-5 flex lg:mt-0 lg:ml-4">
          <span class="hidden sm:block shadow-sm rounded-md">
            <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:text-gray-800 active:bg-gray-50 transition duration-150 ease-in-out">
              <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              Edit
            </button>
          </span>

          <span class="sm:ml-3 shadow-sm rounded-md">
            <%= link_to t('students.lessons.show.start_lesson'),
                '',
                # disabled: !lesson.future?,
                class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700 transition duration-150 ease-in-out', 'data-popup' => true%>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>