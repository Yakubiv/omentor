<div class="flex-1 flex flex-col bg-white overflow-hidden chatbox-full-h">
  <div class="border-b flex px-6 py-2 items-center flex-none">
    <div class="flex flex-col">
      <h2 class="text-grey-darkest mb-1 font-extrabold">
        <%= target_profile.name %>
      </h2>

      <div class="text-grey-dark text-sm truncate">
        <a href="<%= class_room_path(class_room) %>">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="14" height="14">
            <path class="heroicon-ui" d="M6 18.7V21a1 1 0 0 1-2 0v-5a1 1 0 0 1 1-1h5a1 1 0 1 1 0 2H7.1A7 7 0 0 0 19 12a1 1 0 1 1 2 0 9 9 0 0 1-15 6.7zM18 5.3V3a1 1 0 0 1 2 0v5a1 1 0 0 1-1 1h-5a1 1 0 0 1 0-2h2.9A7 7 0 0 0 5 12a1 1 0 1 1-2 0 9 9 0 0 1 15-6.7z"/>
          </svg>
        </a>
      </div>
    </div>

    <div class="ml-auto hidden md:block">
      <div class="relative">
        <%= render 'messages/search_message_form', url: url %>

        <div class="absolute pin-y pin-l pl-3 flex items-center justify-center" style="top: 13px">
          <svg class="fill-current text-grey h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="px-6 py-4 flex-1 overflow-y-scroll" id="messages-container" data-class-room-id="<%= class_room.uuid %>">
    <%= render 'messages/messages', messages: @messages, profile: current_tutor_profile %>
  </div>

  <%= render 'messages/form', class_room: class_room, profile: profile %>
</div>