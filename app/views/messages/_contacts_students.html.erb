<div class="bg-indigo-darker text-purple-lighter flex-none w-1/3 pb-6 hidden md:block">
    <div class="px-2 flex justify-between">
        <div class="flex flex-col relative w-full">
            <div class="absolute flex items-center justify-center h-10 w-10 left-0 top-0">
                <svg class="h-6 w-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
            </div>
            <div>
                <input class="focus:outline-none appearance-none border border-grey rounded-lg pl-8 pr-4 py-2 w-full" type="text" />
            </div>
        </div>
    </div>
    <ul class="flex flex-col mt-4 space-y-2 overflow-y-auto">
        <% if @class_rooms.any? %>
            <%- @class_rooms.each do |class_room|%>
                <%= render 'students/chats/profile_card', profile: class_room.tutor_profile, class_room: class_room, url: students_chat_path(class_room) %>
            <% end %>
        <% else %>
            <li class="flex flex-row items-center relative p-2 rounded m-auto">
                <div class="p-2 bg-indigo-400 items-center text-indigo-100 leading-none rounded-full flex lg:inline-flex">
                    <span class="mr-2 text-left flex-auto">
                        У вас поки що немає чатів...
                    </span>
                </div>
            </li>
        <% end %>
    </ul>
</div>