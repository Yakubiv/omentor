<%= form_with model: Feedback.new, url: feedbacks_path, method: :post do |f| %>
  <p class="text-base leading-6 font-medium text-gray-900"><%= t('feedback_form.post_an_idea') %></p>

  <ul class="errors alert-danger"></ul>

  <%= f.text_area :describe, rows: "7", class: "form-control", placeholder: true, required: true %>
  
  <div class="image-upload">
    <label for="feedback-image-input" class="cursor-pointer form-control flex items-center">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M13.8284 10.1716C12.2663 8.60948 9.73367 8.60948 8.17157 10.1716L4.17157 14.1716C2.60948 15.7337 2.60948 18.2663 4.17157 19.8284C5.73367 21.3905 8.26633 21.3905 9.82843 19.8284L10.93 18.7269M10.1716 13.8284C11.7337 15.3905 14.2663 15.3905 15.8284 13.8284L19.8284 9.82843C21.3905 8.26633 21.3905 5.73367 19.8284 4.17157C18.2663 2.60948 15.7337 2.60948 14.1716 4.17157L13.072 5.27118" stroke="#4A5568" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <div id="feedback-file-name" class="pl-4 text-xs"><%= t('feedback_form.choose_file') %></div> 
    </label>
    <%= f.file_field :image, class: "form-control hidden", id: "feedback-image-input" %>
  </div>

  <%= f.submit t('feedback_form.submit'), class: "form-control btn btn-primary mt-5 cursor-pointer" %>
<% end %>