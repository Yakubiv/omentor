<div class="px-4 sm:px-6 lg:px-8 py-6 bg-white mb-10">
  <div class="mx-auto">
    <div>
      <div class="sm:hidden">
        <select aria-label="Selected tab" class="form-select block w-full">
          <option>
            <a href="<%= general_students_settings_path %>">
              <%= t('tutors.settings.general_header') %>
            </a>
          </option>

          <option>
            <a href="<%= photo_students_settings_path %>">
              <%= t('tutors.settings.avatar_header') %>
            </a>
          </option>

          <option>
            <a href="<%= bio_students_settings_path %>">
              <%= ('tutors.settings.bio_header') %>
            </a>
          </option>

          <option selected="">
            <a href="<%= account_students_settings_path %>">
              <%= t('tutors.settings.account_header') %>
            </a>
          </option>
        </select>
      </div>

      <div class="hidden sm:block">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <a href="<%= general_students_settings_path %>" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm <%= active_if?(action: 'general') == 'active' ? active_tab_link : inactive_tab_link %>">
              <%= t('tutors.settings.general_header') %>
            </a>

            <a href="<%= photo_students_settings_path %>" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm <%= active_if?(action: 'photo') == 'active' ? active_tab_link : inactive_tab_link %>">
              <%= t('tutors.settings.avatar_header') %>
            </a>

            <a href="<%= bio_students_settings_path %>" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm <%= active_if?(action: 'bio') == 'active' ? active_tab_link : inactive_tab_link %>">
              <%= t('tutors.settings.bio_header') %>
            </a>

            <a href="<%= account_students_settings_path %>" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm <%= active_if?(action: 'account') == 'active' ? active_tab_link : inactive_tab_link %>">
              <%= t('tutors.settings.account_header') %>
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
