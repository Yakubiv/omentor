.row.clearfix.pt-50.pb-50
  .col-lg-6.offset-lg-3
    = render 'steps'
  .col-lg-6.offset-lg-3
    .card
      = form_with(model: @student_profile, url: students_details_path, method: :put) do |f|
        .card-body
          .card-title.mb-3
            = t('students.details.bio_header')
          = render 'students/fields/bio', f: f
        .card-footer.text-right
          = link_to t('students.details.back').html_safe, photo_students_details_path, class: 'btn btn-info'
          = f.submit t('students.details.done').html_safe, class: 'btn btn-info'