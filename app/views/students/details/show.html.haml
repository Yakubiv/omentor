.row.clearfix.pt-50.pb-50
  .col-lg-6.offset-lg-3
    = render 'steps'
  .col-lg-6.offset-lg-3
    .card
      = form_with(model: @student_profile, url: students_details_path(@student_profile), method: :post) do |f|
        .card-body
          .card-title
            = t('students.details.main_header')
          = render 'fields',f: f
        .card-footer.text-right
          = f.submit t('students.details.next').html_safe, class: 'btn btn-info'