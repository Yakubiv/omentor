<div class="bg-white shadow">
  <div class="px-4 sm:px-6 lg:mx-auto lg:px-8">
    <div class="py-6 md:flex md:items-center md:justify-between lg:border-t lg:border-b lg:border-cool-gray-200">
      <div class="flex-1 min-w-0">
        <!-- Profile -->
        <div class="flex items-center">
          <% if tutor_profile.avatar.attachment%>
            <%= image_tag user_avatar(tutor_profile, 80), class: 'hidden h-15 w-15 rounded-full sm:block'%>
          <% end %>
          <div>
            <div class="flex items-center">
              <% if tutor_profile.avatar.attachment%>
                <%= image_tag user_avatar(tutor_profile, 80), class: 'h-15 w-15 rounded-full sm:hidden'%>
              <% end %>

              <h1 class="ml-3 text-2xl font-bold leading-7 text-cool-gray-900 sm:leading-9 sm:truncate">
                <%= tutor_profile.name %>
                <small>@<%= tutor_profile.username %></small>
              </h1>
            </div>
            <dl class="mt-6 flex flex-col sm:ml-3 sm:mt-1 sm:flex-row sm:flex-wrap">
              <dt class="sr-only">Company</dt>
              <dd class="flex items-center text-sm leading-5 text-cool-gray-500 font-medium capitalize sm:mr-6">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-cool-gray-400" viewBox="0 0 20 20" fill="currentColor">
<path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"></path>
</svg>
                <%= tutor_profile.city %>
              </dd>

              <dt class="sr-only">Account status</dt>
              <dd class="mt-3 flex items-center text-sm leading-5 text-cool-gray-500 font-medium sm:mr-6 sm:mt-0 capitalize">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
</svg>
                Verified account
              </dd>

              <dt class="sr-only">Rate</dt>
              <dd class="mt-3 flex items-center text-sm leading-5 text-cool-gray-500 font-medium sm:mr-6 sm:mt-0 capitalize">
                <svg class="flex-shrink-0 mr-2 h-7 w-7 text-gray-600" viewBox="0 0 24 24" width="24" height="24">
                  <path class="heroicon-ui" d="M12 22a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm1-11v2h1a3 3 0 0 1 0 6h-1v1a1 1 0 0 1-2 0v-1H8a1 1 0 0 1 0-2h3v-2h-1a3 3 0 0 1 0-6h1V6a1 1 0 0 1 2 0v1h3a1 1 0 0 1 0 2h-3zm-2 0h-1a1 1 0 1 0 0 2h1V9zm2 6h1a1 1 0 0 0 0-2h-1v2z"/>
                </svg>
                <%= number_to_currency tutor_profile.rate %>/<%= t('common.hour') %>
              </dd>

              <dt class="sr-only">Subjects</dt>
              <dd class="mt-3 flex items-center text-sm leading-5 text-cool-gray-500 font-medium sm:mr-6 sm:mt-0 capitalize">
                <svg class="flex-shrink-0 mr-2 h-7 w-7 text-gray-600" viewBox="0 0 24 24" width="24" height="24">
                  <path class="heroicon-ui" d="M8 7V5c0-1.1.9-2 2-2h4a2 2 0 0 1 2 2v2h4a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V9c0-1.1.9-2 2-2h4zm8 2H8v10h8V9zm2 0v10h2V9h-2zM6 9H4v10h2V9zm4-2h4V5h-4v2z"/>
                </svg>
                <%= tutor_profile.subjects.map(&:name).join(', ') %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="mt-6 flex space-x-3 md:mt-0 md:ml-4">
        <span class="shadow-sm rounded-md">
          <% if controller.class.to_s.split('::').first == 'Students' && !controller_name.include?('profile') %>
            <a href="<%= students_my_tutor_path(tutor_profile) %>" class="inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700 transition duration-150 ease-in-out">
              <%= t('students.tutor_profiles.view_profile_link') %>
            </a>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>