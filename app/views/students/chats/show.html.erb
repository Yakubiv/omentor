<div class="flex items-center justify-center">
  <div class="flex flex-col w-full p-4">
    <div class="flex flex-col relative mt-4">
      <div class="absolute flex items-center justify-center h-10 w-10 left-0 top-0">
        <svg class="h-6 w-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
        </svg>
      </div>
      <div>
        <input class="focus:outline-none appearance-none border border-grey rounded-lg pl-8 pr-4 py-2 w-full" type="text" />
      </div>
    </div>

    <hr class="mt-4">

    <div class="font-sans antialiased h-screen flex">
      <%= render 'messages/contacts_students' %>
      <%= render 'messages/chat', class_room: @class_room, messages: @messages, target_profile: @class_room.opposet_profile_to(current_student_profile), profile: current_student_profile %>
    </div>
  </div>
</div>
