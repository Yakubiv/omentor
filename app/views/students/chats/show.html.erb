<div class="flex items-center justify-center">
  <div class="flex flex-col w-full p-4">
    <nav class="flex items-center text-md leading-5 font-medium px-2 pb-2">
      <a href="<%= students_chats_path %>" class="text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out"><%= t('common.chats') %></a>
      <svg class="flex-shrink-0 mx-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <span class="text-gray-500 transition duration-150 ease-in-out"><%= @class_room.tutor_profile.name %></span>
    </nav>
    <div class="font-sans antialiased h-screen flex">
      <div class="hidden lg:block w-width285px">
        <%= render 'messages/contacts_students' %>
      </div>
      <%= render 'messages/chat', class_room: @class_room, messages: @messages, target_profile: @class_room.opposet_profile_to(current_student_profile), profile: current_student_profile %>
    </div>
  </div>
</div>
