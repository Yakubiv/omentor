<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 mt-10">
  <%= render 'students/tutor_profiles/tutor_info_card', tutor_profile: @tutor_profile, purpose: 'check_profile' %>

  <div class="card">
    <div class="card-header">
      <h3 class='card-title'>Виберіть предмет на час проведення уроку</h3>
    </div>
    <div class="card-body">
      <%= form_with(model: @lesson, url: students_tutor_booking_path(@tutor_profile), method: :post, html: { id: 'lesson-booking-form' }) do |f| %>
        <%= render 'students/tutors/bookings/lesson_fields', f: f, lesson: @lesson %>
      <% end %>
    </div>
  </div>
</div>
