<div class="bg-gray-600" x-data="{ open: false }">
  <div class="max-w-screen-xl mx-auto py-8 px-4 sm:px-6 lg:py-8 lg:px-8">
    <div class="py-6 rounded-lg md:py-12 lg:py-16 xl:flex xl:items-center">
      <div class="xl:w-0 xl:flex-1">
        <h2 class="text-2xl leading-8 font-extrabold tracking-tight text-white sm:text-3xl sm:leading-9">
          <%= t 'blog.want_update' %>
        </h2>
        <p class="mt-3 max-w-3xl text-lg leading-6 text-indigo-200">
          <%= t 'blog.subscribe_text' %>
        </p>
      </div>
      <div class="mt-8 sm:w-full sm:max-w-md xl:mt-0 xl:ml-8">
        <%= form_with model: NewsSubscriber.new, url: subscriptions_path, method: :post, html: { class: 'sm:flex' } do |f| %>
          <%= f.email_field :email, class: 'appearance-none w-full px-5 py-3 border border-transparent text-base leading-6 rounded-full text-gray-900 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 transition duration-150 ease-in-out', require: true, placeholder: t('blog.email_placeholder') %>
          <div class="mt-3 rounded-md sm:mt-0 sm:ml-3 sm:flex-shrink-0">
            <%= f.submit t('blog.notify_me'), class: 'w-full flex items-center justify-center px-5 py-3 border border-transparent text-base leading-6 font-medium rounded-full text-white bg-indigo-500 hover:bg-indigo-400 focus:outline-none cursor-pointer shadow focus:bg-indigo-400 transition duration-150 ease-in-out' %>
          </div>
        <% end %>
        <p class="mt-3 text-sm leading-5 text-indigo-200">
          <%= t('common.rights') %>
          <a href="#" class="text-white font-medium underline">
            <%= t('common.read_rights') %>
          </a>
        </p>
      </div>
    </div>
  </div>

  <%= render 'subscriptions/success_modal' %>
</div>